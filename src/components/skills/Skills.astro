---
import SectionContainer from "@components/ui/SectionContainer.astro";
import PowerIcon from "@icons/PowerIcon.astro";
const skillsIcons = await Astro.glob("@icons/skills/*.astro");
---

<SectionContainer id="skills" title="HABILIDADES">
  <PowerIcon class="size-4 sm:size-6" slot="icon" />
  <div
    class="flex justify-center items-center gap-2 sm:gap-4 flex-wrap pl-5 sm:pl-7"
  >
    {
      skillsIcons.map((icon) => (
        <div
          id="icon"
          class="relative size-12 border rounded-full bg-black/10 dark:bg-white/10 flex justify-center items-center border-black/10 dark:border-white/10"
        >
          <icon.default
            class="size-6 sm:size-8 text-black/90 dark:text-white/90"
            stroke-width="1.5"
          />
        </div>
      ))
    }
  </div>
</SectionContainer>

<style is:inline>
  #tooltip {
    padding: 0px 4px 1px 4px;
    width: min-content;
    font-size: 12px;
    font-weight: bold;
    border: solid 1px #ffffff10;
    border-radius: 2rem;
    background-color: #ffffff90;
    text-align: center;
    position: absolute;
    visibility: hidden;
    max-width: fit-content;
    margin-left: auto;
    margin-right: auto;
    bottom: 75%;
  }

  @media (prefers-color-scheme: dark) {
    #tooltip {
      background-color: #00000090;
      border: solid 1px #00000010;
    }
  }

  @media (width >= 1024px) {
    #icon:hover > #tooltip {
      visibility: visible;
      transition: all 0.5s ease;
      transform: translateY(-1rem);
    }
  }

  @media (width < 1024px) {
    #tooltip {
      visibility: visible;
      position: static;
      background-color: transparent;
      border: none;
    }

    #icon {
      width: auto;
      height: auto;
      padding: 2px 4px;
    }
  }
</style>

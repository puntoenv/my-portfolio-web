---
import CalendarIcon from "@icons/CalendarIcon.astro";
import Badge from "./Badge.astro";

interface Props {
  title: string;
  company: string;
  time: string;
  description: string;
  index: number;
}

const { title, company, time, description, index } = Astro.props;
---

<li class="ms-[20px] relative">
  <span
    class="-left-[33px] absolute flex items-center justify-center w-6 h-6 bg-white/90 rounded-full -start-3 dark:bg-black/90 ring-8 ring-black/10 dark:ring-white/10"
  >
    <CalendarIcon />
  </span>
  <div class="grid gap-y-2 ml-2">
    <h3 class="font-bold -mt-0.5">
      {title}
      <span class="hidden sm:inline">
        - {company}
      </span>
    </h3>
    <span class="sm:hidden flex items-center gap-x-2">
      {company}
      {index === 0 && <Badge>Latest</Badge>}
    </span>
    <span class="text-sm sm:text-lg italic flex items-center gap-x-2">
      {time}
      {index === 0 && <Badge class="hidden sm:inline not-italic">Latest</Badge>}
    </span>
    <p class="opacity-90 text-sm sm:text-lg">
      {description}
    </p>
  </div>
</li>

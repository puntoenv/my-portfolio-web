---
import Badge from "./Badge.astro";
import ExperienceIcon from "@icons/ExperienceIcon.astro";

const { title, latest, time, description } = Astro.props;
---

<li class="ms-6">
  <span
    class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <ExperienceIcon />
  </span>
  <h3
    class="flex items-center gap-2 mb-1 text-lg font-semibold text-gray-900 dark:text-white"
  >
    {title}
    {latest && <Badge> Latest </Badge>}
  </h3>
  <time
    class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{time}</time
  >
  <p class="text-base font-normal text-gray-500 dark:text-gray-400">
    {description}
  </p>
</li>

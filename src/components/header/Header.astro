---
import NavItem from "./NavItem.astro";
---

<header class="flex justify-center items-end lg:h-24 sticky top-0 z-10">
  <nav
    id="navHeader"
    class="w-full lg:w-auto text-xs font-bold sm:text-sm flex flex-row flex-wrap justify-center items-center gap-2 sm:gap-2 bg-black/10 dark:bg-white/10 px-12 py-2 sm:p-2 lg:rounded-full backdrop-blur-3xl border-b lg:border border-black/10 dark:border-white/10"
  >
    <NavItem href="#home"> Inicio </NavItem>
    <NavItem href="#experience"> Experiencia </NavItem>
    <NavItem href="#education"> Educaci√≥n </NavItem>
    <NavItem href="#skills"> Habilidades </NavItem>
    <!-- <NavItem href="#contact"> Contacto </NavItem> -->
  </nav>
</header>

<script is:inline>
  const navHeader = document.getElementById("navHeader");
  const links = navHeader.querySelectorAll("[name='links']");
  navHeader.addEventListener("click", (event) => {
    if (event.target.name === "links") {
      if (event.target.classList.contains("clicked")) return;
      links.forEach((link) => link.classList.remove("clicked"));
      event.target.classList.add("clicked");
    }
  });
</script>

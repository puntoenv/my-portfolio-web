---
import Footer from "@components/footer/Footer.astro";
import Header from "@components/header/Header.astro";
import Seo from "@components/seo/Seo.astro";

interface Props {
  title: string;
  description: string;
  canonical: string;
  twitter: string;
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta name="generator" content={Astro.generator} />
    <Seo {...Astro.props} />
    <script>
      window.matchMedia("(prefers-color-scheme: dark)").matches
        ? document.documentElement.classList.add("dark")
        : document.documentElement.classList.remove("dark");
    </script>
  </head>
  <body class="relative">
    <div
      class="fixed sm:absolute inset-0 min-h-screen overflow-y-scroll items-center bg-white dark:bg-black [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#63e_100%)] dark:[background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)] bg-cover"
    >
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  @import "/src/globals.css";
</style>
